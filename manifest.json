{
    "manifest_version": 3,
    "name": "PokerNow Assistant",
    "version": "1.0",
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://www.pokernow.club/*"
            ],
            "js": [
                "dist/content.bundle.js"
            ]
        }
    ],
    "background": {
        "service_worker": "dist/background.bundle.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "1": "icons/icon.png"
        }
    }
}
